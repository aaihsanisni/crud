<link rel="stylesheet" href="style.css">
<form action="/register" method="POST" class="submission-form">
    <div>
        <label for="name">Name</label>
        <input class="input" autocomplete="off" type="text" id="name" name="name" required>
    </div>

    <div>
        <label for="email">Email</label>
        <input class="input" autocomplete="off" type="text" id="email" name="email" required>
    </div>

    <div>
        <label for="password">Password</label>
        <input class="input" autocomplete="off" type="password" id="password" name="password" required>
    </div>

    <button type="submit" class="sendBtn">Register</button>
</form>

<div style="text-align:center"><a href="/login" class="regBtn">Login</a></div>